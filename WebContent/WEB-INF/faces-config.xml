<?xml version="1.0" encoding="UTF-8"?>

<faces-config version="2.2" 
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
           	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 	          xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

 <application>
 <locale-config>
    <default-locale>en</default-locale>
    <supported-locale>ko</supported-locale>
  </locale-config>
  <resource-bundle>
   <base-name>com.corejsf.timesheets.messages</base-name>
   <var>msgs</var>
  </resource-bundle>
 </application>
 
  <navigation-rule>
   <from-view-id>/index.xhtml</from-view-id>
    <navigation-case>
     <from-outcome>login</from-outcome>
     <if>#{empController.verifyUser(username.value, password.value)}</if>
     <to-view-id>/timesheet.xhtml</to-view-id>
    </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
    <from-view-id>*</from-view-id>
     <navigation-case>
      <from-outcome>profile</from-outcome>
      <to-view-id>/profilePage.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
      <from-outcome>logOut</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
      <from-outcome>adminPage</from-outcome>
      <to-view-id>/adminPage.xhtml</to-view-id>
     </navigation-case>
     <navigation-case>
      <from-outcome>timesheetList</from-outcome>
      <to-view-id>/timesheetList.xhtml</to-view-id>
     </navigation-case>
   </navigation-rule>
</faces-config>